@using Asp.Net_Mvc5_ile_Tatil__Seyahat_Sitesi.Models.Sınıflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="  table table-bordered">

    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {


<tr>


    <td>@x.ID</td> 
    <td>@x.KullanıcıAdı</td>
    <td>@x.Maıl</td>
    <td>@x.Yorum</td>
    <td>@x.blog.Baslık</td>
    <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>
    



</tr>
    }
</table>