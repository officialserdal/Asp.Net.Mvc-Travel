@model Asp.Net_Mvc5_ile_Tatil__Seyahat_Sitesi.Models.Sınıflar.Yorumlar
@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Güncelleme Sayfası</h2>
<br />  
@using (Html.BeginForm("YorumGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.KullanıcıAdı)
    @Html.TextBoxFor(x => x.KullanıcıAdı, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Maıl)
    @Html.TextBoxFor(x => x.Maıl, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Yorum)
    @Html.TextAreaFor(x => x.Yorum, 15, 1, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-success" style="background-color:forestgreen">Yorum Güncelle</button>
}

