﻿@using Asp.Net_Mvc5_ile_Tatil__Seyahat_Sitesi.Models.Sınıflar
@model List<Blog>
@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <a href="/Blog/BlogDetay/@x.ID"><img src="@x.BlogImage" alt="" style="width:275px; height:172px;" /></a>
        </div>
        <div class="left-text">

            <a href="/Blog/BlogDetay/@x.ID"><h4>@x.Baslık</h4></a>
            <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@x.Acıklama.Substring(0, 100)...</p>
            <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>

}